
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <script>
        function validate() {
            let name = document.forms["formc"]["sname"].value;
            if (name == "") {
                alert("Name must be filled out");
                return false;
            }
            let age = document.forms["formc"]["age"].value;
            if (age == 0) {
                alert(" age must be filled out");
                return false;
            }
            let address = document.forms["formc"]["address"].value;
            if (address == "") {
                alert(" address must be filled out");
                return false;
            }
            let countryList = document.forms["formc"]["countryList"].value;
            if (countryList == 0) {
                alert("country must be select one");
                return false;
            }
        }
       
    </script>
    <style>
        .container {
            margin-top: 9%;
            margin-bottom: 9%;
            background-color: antiquewhite;
            justify-content: center;
        }

        .form-select selectpicker {
            align-items: center;
            margin-top: 2%;
            margin-bottom: 2%;
            background-color: antiquewhite;
            justify-content: center;
            width: auto !important;
        }
    </style>
</head>
<body>
   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <div class="container" align="center">
        <form class="row g-3 needs-validation" name="formc" novalidate id="frmDetail" method="post" onsubmit="return validate()" action="@Url.Action("InsertRecord")">
            <div class="addstu">
                <h2 align="center">Add New </h2>
                <div class="col-md-3">
                    <input type="hidden" class="form-control" id="sid" name="sid" required>
                </div>

                <div class="col-md-3">
                    Student Name: <input type="text" class="form-control" id="sname" name="sname" required>
                </div>

                <div class="col-md-3">
                    Age: <input type="number" class="form-control" id="age" name="age" min=1 required>
                </div>
                <br />
                <div class="col-md-3">

                    Address :<textarea class="form-control" id="address" name="address" aria-describedby="inputGroupPrepend" maxlength="200" required></textarea>
                </div>
                <br />
                <div class="col-mb-3">
                    <label id="cid" name="cid">Country Name</label>
                    @Html.DropDownList("countryList", null, " --select-- ", htmlAttributes: new {@class = "form-select selectpicker w-25", @name ="cname" })
                  </div>

                    <br />

                    <div>
                       
                        <input class="form-check-input" type="checkbox" name="isactive" id="isactive">
                        <label class="form-check-label">
                            Is Active
                        </label>

                    </div>
                </div>

            <div>
                <input type="submit" value="Submit" class="btn btn-primary" id="submit" name="action">
               
            </div>
        </form>

    </div>
</body>
</html>
