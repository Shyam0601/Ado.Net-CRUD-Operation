@model System.Data.DataTable
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editc</title>
    <style>
        .container {
            margin-top: 5%;
            background-color: lightgrey;
            justify-content: center;
            border-color: black;
        }
    </style>
</head>
<body>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <div class="container" align="center">
        <div>
            <form class="row g-3 needs-validation" novalidate id="frmDetail" method="post" action="@Url.Action("UpdateRecord")">
                <div class="addcountry">
                    <h2 align="center">Edit Form </h2>
                </div>

                <div class="col-md-3">
                    <label for="cname" class="form-label" length="200px">Country Name</label> <br />
                    <input type="text" class="form-control" id="cname" name="cname" value="@Model.Rows[0]["countryName"]" required />
                </div>
                <div class="col-md-3">
                    <input type="hidden" class="form-control" id="cid" name="cid" value="@Model.Rows[0]["countryId"]" required>
                </div>
                <div class="input-group has-validation">
                    @if (Model.Rows[0]["isactive"].ToString() == "True")
                    {
                        <input class="form-check-input" type="checkbox" name="isactive" id="isactive" checked required>
                    }
                    else
                    {
                        <input class="form-check-input" type="checkbox" name="isactive" id="isactive" required>
                    }
                   <br />
                    <label class="form-check-label" for="invalidCheck">
                        Is Active
                    </label>
                </div>
                <div class="mb-md-4">
                    <input type="submit" value="Submit" class="btn btn-primary" id="submit" name="action">
                </div>
            </form>
        </div>
    </div>

</body>
</html>
