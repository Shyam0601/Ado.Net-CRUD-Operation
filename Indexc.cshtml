@using System.Data
@using System.Data.SqlClient
@model System.Data.DataTable
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Indexc</title>
</head>
<body>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <div class="container">
        <form class="main" method="post" name="Display">
            <h2>Index</h2>

            <br />
            @{
                if (Model.Rows.Count > 0)
                {

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th hidden="hidden" scope="col">Country Id</th>
                                <th scope="col">Country Name</th>
                                <th scope="col">Is Active</th>
                                <th colspan=2>Edit</th>
                            </tr>
                        </thead>
                        @foreach (DataRow dr in Model.Rows)
                            {
                            <tbody>
                                <tr>
                                    <td hidden="hidden">@dr["countryId"].ToString()</td>
                                    <td>@dr["countryName"].ToString()</td>
                                    <td>
                                        @if (dr["isactive"].ToString() == "True")
                                        {
                                            <i class="fa-regular fa-circle-check fa-lg text-success"></i>}
                                        else
                                        {
                                            <i class="fa-regular fa-circle-xmark  fa-lg text-danger"></i>}
                                    </td>
                                    <td>
                                        <a href="~/Country/Editc?countryId=@dr["countryId"]"><i class="fa fa-edit"></i></a>
                                        <a href="~/Country/Delete?countryId=@dr["countryId"]"><i class="fa fa-trash"></i></a>
                                      
                                    </td>
                                </tr>
                            </tbody>
                        }
                    </table>
                }
                else
                {
                    <span> No records found!!</span>
                }
            }
        </form>
    </div>
    <div class="col-12" align="center">

        <a href="~/Country/Createc" class="btn btn-primary">Add</a>
    </div>
</body>
</html>






