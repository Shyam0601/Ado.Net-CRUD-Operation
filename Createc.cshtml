
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Createc</title>
    <script>
        function sum() {
            var a = document.forms["con"]["cname"].value;
            if (a == "") {
                alert("plese fill Countryname");
                return false;
            }
        }
    </script>
   
    <style>
        .container {
            margin-top: 9%;
            margin-bottom: 9%;
            background-color: antiquewhite;
            justify-content: center;
        }
    </style>
</head>
<body>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <div class="container" align="center">
        <form class="row g-3 needs-validation" name="con" novalidate id="frmDetail"  method="post" onsubmit="return sum()" action="@Url.Action("InsertRecord")">
            <div class="addcountry">
                <h2 align="center">Add New </h2>
                <div class="col-md-3">
                    <input type="hidden" class="form-control" id="cid" name="cid" value="" required>
                </div>

                <div class="col-md-3">
                    Country Name: <input type="text" class="form-control" id="cname" name="cname" value="" required>
                </div>
                <br />
                <div>
                    <input class="form-check-input" type="checkbox" name="isactive" id="isactive" required>
                    <label class="form-check-label" for="invalidCheck">
                        Is Active
                    </label>
                </div>
                <br />
                <div>
                    <input type="submit" value="Submit" class="btn btn-primary" id="submit" name="action">

                </div>
            </div>
        </form>
    </div>
       
        
</body>
</html>
